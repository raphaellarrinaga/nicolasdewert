{%
  set classes = [
    'section-skills',
    'spaced-lg',
    'bg-gray',
  ]
%}
<div{{ attributes.addClass(classes)|without('id') }}>
  <div class="l-constrain clearfix">
  {{ title_prefix }}
  {% if label %}
    <h1 {{ title_attributes.addClass('section-skills__title', 'section-title') }}>{{ label }}</h1>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    <div class="section-skills__content">
    {{ content }}
    </div>
    <figure class="section-skills__figure">
      <img src="{{ base_path ~ directory ~ "/images/parc-boverie-stephane-mignon.jpg"}}" alt="">
      <legend><a href="https://goo.gl/a1WHEd">{{ "Credit Stephane Mignon"|t }}</a></legend>
    </figure>
  {% endblock %}
  </div>
</div>
