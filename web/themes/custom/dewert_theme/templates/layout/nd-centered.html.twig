{#
/**
 * @file
 * ETUC theme 2 column template.
 *
 * Available variables:
 * - fist
 * - second
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'layout',
    'layout--centered',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.first %}
    <div class="layout__region layout__region--first">
      {{ content.first }}
    </div>
    {% endif %}
    {% if content.second %}
    <div class="layout__region layout__region--second">
      {{ attach_library('dewert_theme/justified_gallery') }}
      <div id="worksGallery">
      {% if content.second.field_media_image %}
      {% for key, child in content.second.field_media_image if key|first != '#' %}
        <div>{{ child }}</div>
      {% endfor %}
      </div>
      {% endif %}
      {{ content.second|without('field_media_image') }}
    </div>
    {% endif %}
  </div>
{% endif %}
