{#
/**
 * @file
 * Theme override to display a front page.
 *
 */
#}

<div class="site-container">
  {% if page.header %}
    {% include "@organisms/site-header/site-header.twig" ignore missing with {
      content: page.header,
      button_text: "Contact"|t ~ " <span>| "~ "Visites"|t ~"</span>",
      button_url: "#contact",
    } %}
  {% endif %}

  <main class="site-main" role="main" tabindex="-1">
    {{ page.title }}
    {{ page.content_top }}

    <section class="site-content" id="main-content">
      <div class="l-constrain">

        {% block content %}
          {{ page.content }}
        {% endblock %}

        {% if page.content_aside %}
          <aside role="complementary" class="site-content-aside">
            {{ page.content_aside }}
          </aside>
        {% endif %}
      </div>
    </section>

    {{ page.content_bottom }}
  </main>

  {% if page.footer %}
    {% include "@organisms/site-footer/site-footer.twig" ignore missing with {
      content: page.footer,
      copyright: "now"|date("Y") ~ " Â© n.dewert sprl" ,
    } %}
  {% endif %}
</div>
